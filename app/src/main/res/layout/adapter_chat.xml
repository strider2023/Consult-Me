<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/adapter_chat_peer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapter_chat_peer_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_oval_color_primary"
            android:cropToPadding="true"
            android:padding="5dp"
            android:src="@drawable/ic_face_white_36dp"
            android:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext_base"
            android:minHeight="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_chat_peer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:text="Test"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adapter_chat_peer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Test"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/adapter_chat_user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:minHeight="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_chat_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:text="Test"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adapter_chat_user_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Test"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/adapter_chat_user_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_oval_color_primary"
            android:cropToPadding="true"
            android:padding="5dp"
            android:src="@drawable/ic_face_white_36dp"
            android:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>